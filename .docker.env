# Docker-Umgebungsvariablen für Besuchererfassungssystem

# Anwendungseinstellungen
NODE_ENV=production
PORT=5000

# Datenbankeinstellungen
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=besucherdb
DATABASE_URL=postgres://postgres:postgres@db:5432/besucherdb

# Cookie-Einstellungen für Docker-Umgebung
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax